# ===========================================
# PAYMENT SETTINGS
# ===========================================
# Payment timeout in seconds (default: 1 hour)
PAYMENT_TIMEOUT=3600

# Minimum confirmations required for payment verification
MIN_CONFIRMATIONS=3

# ===========================================
# API SECURITY
# ===========================================
# Default API key (will be generated if not provided)
API_KEY=your-secure-api-key-here

# Rate limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=200

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# SQLite database file path (relative to project root)
DATABASE_PATH=./crypto_payment_gateway.db

# ===========================================
# EMAIL NOTIFICATIONS (OPTIONAL)
# ===========================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email settings
FROM_EMAIL=noreply@yourcompany.com
FROM_NAME=Crypto Payment Gateway

# ===========================================
# WEBHOOK CONFIGURATION (OPTIONAL)
# ===========================================
# Webhook URLs for payment notifications
WEBHOOK_URL=https://your-api.com/webhook/payment
WEBHOOK_SECRET=your-webhook-secret

# ===========================================
# LOGGING AND MONITORING
# ===========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Enable debug mode
DEBUG=false

# Enable API documentation endpoint
ENABLE_API_DOCS=true

# ===========================================
# NETWORK-SPECIFIC SETTINGS
# ===========================================
# Gas settings for EVM networks
BSC_GAS_LIMIT=21000
BSC_GAS_PRICE=5000000000  # 5 Gwei

ETH_GAS_LIMIT=21000
ETH_GAS_PRICE=20000000000  # 20 Gwei

# Solana settings
SOL_COMMITMENT=confirmed
SOL_SKIP_PREFLIGHT=false

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
# Backup wallet addresses (optional)
BSC_BACKUP_WALLET=0x...
ETH_BACKUP_WALLET=0x...
SOL_BACKUP_WALLET=...

# ===========================================
# ADVANCED SETTINGS
# ===========================================
# Connection timeouts (milliseconds)
RPC_TIMEOUT=30000
HTTP_TIMEOUT=10000

# Retry settings
MAX_RETRIES=3
RETRY_DELAY=1000

# Cache settings
CACHE_TTL=300  # 5 minutes

# ===========================================
# SECURITY HEADERS
# ===========================================
# Content Security Policy
CSP_DEFAULT_SRC=self
CSP_SCRIPT_SRC=self
CSP_STYLE_SRC=self unsafe-inline

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable specific features
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBHOOK_NOTIFICATIONS=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
ENABLE_HELMET=true

# Network-specific feature flags
ENABLE_BSC=true
ENABLE_ETHEREUM=true
ENABLE_SOLANA=true

# ===========================================
# MONITORING AND HEALTH CHECKS
# ===========================================
# Health check intervals (seconds)
HEALTH_CHECK_INTERVAL=60
BALANCE_CHECK_INTERVAL=300

# Alert thresholds
LOW_BALANCE_THRESHOLD=0.1
HIGH_GAS_PRICE_THRESHOLD=100000000000  # 100 Gwei
